<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity">
    <LinearLayout
        android:id="@+id/ll_splash_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/google_9x"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_progress_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_splash_holder"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/google_2x"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_retry"
            android:layout_width="@dimen/google_5x"
            android:layout_height="@dimen/google_5x"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <include layout="@layout/layout_iw_progress_ring" />
    </RelativeLayout>
</RelativeLayout>
